# Staging domain - zmień na swoją domenę
localhost:8800 {
  encode gzip
  reverse_proxy gateway:8800
  
  # Security headers
  header {
    X-Frame-Options DENY
    X-Content-Type-Options nosniff
    Referrer-Policy strict-origin-when-cross-origin
  }
  
  # Logi
  log {
    output file /var/log/caddy/access.log
  }
}

# Production domain (odkomentuj gdy masz domenę)
